{
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "env": {
      "browser": true,
      "es6": true,
      "amd": true,
      "node": true,
      "jest": true
  },
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "plugins": [
      "react"
  ],
  "settings": {
      "react": {
          "version": "detect"
      }
  },
  "rules": {
      "arrow-parens": "error",
      "no-process-env": "off",
      "indent": [
          "error", 4, {
              "SwitchCase": 1
          }
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ]
  }
}